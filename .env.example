# Groq API Configuration (Required for LLM functionality)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Telegram Bot Configuration  
TELEGRAM_TOKEN=your_telegram_token_here

# Optional: Rate limiting
GROQ_MAX_REQUESTS_PER_MINUTE=30

# Advanced RAG Feedback Loop Settings (Optional)
ENABLE_FEEDBACK_LOOP=true
FEEDBACK_MAX_ITERATIONS=3
FEEDBACK_RELEVANCE_THRESHOLD=0.2
FEEDBACK_CONFIDENCE_THRESHOLD=0.15
FEEDBACK_MAX_DOCS=12

# Performance Settings (Optional)
FEEDBACK_ENABLE_CACHING=true
FEEDBACK_LOG_HISTORY=true
FEEDBACK_ENHANCE_ANSWERS=true
FEEDBACK_FALLBACK_TRADITIONAL=true
FEEDBACK_TRADITIONAL_ON_FAILURE=true
FEEDBACK_MIN_DOC_QUALITY=0.1
